{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./app",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@*": ["./*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@styles": ["theme/styles"],
      "@styles/*": ["theme/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
